  - alert: ManagementNodeLoadAverage5
    expr: node_load5{dedicated="management"} / count without (cpu, mode) (node_cpu{mode="system"}) > 1
    for: 2m
    labels:
      channel: default
      severity: warning
      product: zcp-public
      priority: P4
    annotations:
